<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/myinfo_address_margin_hor"
    android:paddingRight="@dimen/myinfo_address_margin_hor"
    android:paddingTop="@dimen/myinfo_address_margin_hor">

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/myinfo_address_margin_hor"
        android:layout_marginTop="4.0dip"
        android:background="@drawable/myinfo_spinner_item_building" />

    <TextView
        android:id="@+id/txt_myinfo_spinner_poi"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:layout_toRightOf="@+id/img_icon"
        android:text="" />

    <ImageView
        android:id="@+id/img_dividor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_myinfo_spinner_poi"
        android:layout_below="@+id/txt_myinfo_spinner_poi"
        android:layout_marginBottom="5.0dip"
        android:layout_marginTop="5.0dip"
        android:background="@drawable/pdj_dividing_dotted_line"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txt_myinfo_spinner_county"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_myinfo_spinner_poi"
        android:layout_below="@+id/img_dividor"
        android:layout_marginRight="30.0dip"
        android:text=""
        android:textColor="@color/myinfo_selector_sub"
        android:textSize="14.0sp" />

    <TextView
        android:id="@+id/txt_myinfo_spinner_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_myinfo_spinner_poi"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="2.0dip"
        android:layout_toRightOf="@+id/txt_myinfo_spinner_poi"
        android:background="@drawable/home_address_btn_style_green_normal"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingBottom="2.0dip"
        android:paddingLeft="4.0dip"
        android:paddingRight="4.0dip"
        android:paddingTop="2.0dip"
        android:text="当前"
        android:textColor="@color/white"
        android:textSize="10.0sp" />
</RelativeLayout>