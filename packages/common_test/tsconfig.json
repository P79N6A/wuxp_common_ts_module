    "allowSyntheticDefaultImports": false,
    //    "compileOnSave": false,
    //    "emitDecoratorMetadata": true,
    //    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "sourceMap": false,
    //    "allowJs": true,
    "baseUrl": "./src",
    "outDir": "./lib",
    "types": [
      "node",
      "jest"
