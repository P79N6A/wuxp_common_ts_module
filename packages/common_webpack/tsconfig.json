{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop":true,
    "allowSyntheticDefaultImports": true,
    "compileOnSave": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./lib",
    "types": [
      "node",
      "webpack"
    ],
    "lib": [
      "esnext",
      "dom",
      "es6",
      "es2015",
      "es2015.promise"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts"
  ]
}
